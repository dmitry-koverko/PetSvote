<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/tob_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp">

        <ImageView
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="18dp"
            android:src="@drawable/ic_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.petsvote.ui.SearchBar
        android:id="@+id/search_bar"
        app:layout_constraintTop_toBottomOf="@id/tob_bar"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.petsvote.ui.Shape
        app:besie_ripple="@color/ripple_primary"
        android:layout_marginBottom="17dp"
        app:layout_constraintBottom_toTopOf="@id/keyboard"
        app:besie_text_size="19"
        app:besie_text="Найти"
        app:besie_text_color="@color/white"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        app:besie_background="@color/ui_primary"
        android:layout_width="match_parent"
        android:layout_height="56dp"/>

    <com.petsvote.ui.BesieKeyboard
        android:id="@+id/keyboard"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>