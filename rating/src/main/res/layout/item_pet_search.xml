<?xml version="1.0" encoding="utf-8"?>

<com.petsvote.ui.BesieLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginRight="16dp"
    app:layout_constraintRight_toLeftOf="@id/list_pets_user"
    android:id="@+id/search"
    app:bl_background="@color/ui_primary"
    app:bl_ripple_color="@color/ui_gray"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_width="40dp"
    android:layout_height="40dp">

        <ImageView
            android:id="@+id/img"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:src="@drawable/ic_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </com.petsvote.ui.BesieLayout>